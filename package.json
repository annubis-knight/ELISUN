{
  "name": "ClaudeCode-ELISUN",
  "version": "1.0.0",
  "description": "Site web EliSun - Photovolta√Øque familial",
  "type": "module",
  "main": "src/js/main.js",
  "scripts": {
    "dev": "webpack serve --mode development --config webpack.config.cjs",
    "build": "webpack --mode production --config webpack.config.cjs",
    "prod": "npm run build && npm run serve:prod",
    "serve:prod": "cd dist && python -m http.server 8080",
    "build:css": "tailwindcss -i src/css/main.css -o dist/css/style.css --watch",
    "build:js": "webpack --mode development --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/js/**/*.js",
    "lint:js": "eslint src/js/**/*.js",
    "lint:js:fix": "eslint src/js/**/*.js --fix",
    "lint:css": "stylelint \"src/css/**/*.css\"",
    "lint:css:fix": "stylelint \"src/css/**/*.css\" --fix",
    "format": "prettier --write src/**/*.{js,css,html}"
  },
  "keywords": [
    "photovoltaique",
    "elisun",
    "energie",
    "renovable",
    "solaire"
  ],
  "author": "Arnau - EliSun Project",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@eslint/js": "^9.39.1",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.6.2",
    "style-loader": "^4.0.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^3.4.17",
    "webpack": "^5.101.1",
    "webpack-bundle-analyzer": "^5.0.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.1",
    "@studio-freight/lenis": "^1.0.42",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "gsap": "^3.13.0",
    "intl-tel-input": "^25.12.5"
  }
